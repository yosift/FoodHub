<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Resset_Password">





    <ImageView
            android:id="@+id/first_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/firstcircle"/>

    <ImageView
            android:id="@+id/second_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/secondcircel"/>

    <ImageView
            android:id="@+id/third_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thirdcircle"
            android:layout_alignParentEnd="true"/>

    <Button
            android:id="@+id/back_arrow_in_vcode"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/back_arrow_style"
            android:drawableTop="@drawable/back_arrow"
            android:padding="7dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="27dp"
    />



    <TextView
            android:id="@+id/Resset_Password_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Resset_Password_Text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="36.41sp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="27dp"/>
    <TextView
            android:id="@+id/Resset_Password_vcode"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Resset_Password_id"
            android:text="@string/description_for_Resset_Password"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/hint_color"
    />
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="27dp"
                  android:layout_below="@id/Resset_Password_vcode"
                  android:orientation="vertical"
                  android:layout_marginTop="27dp">

    <EditText
            android:layout_width="324dp"
            android:layout_height="65dp"
            android:background="@drawable/edit_text_style"
            android:layout_gravity="center_horizontal"
            android:paddingStart="15dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:maxLength="35"
            android:inputType="textEmailAddress"
    />
        
        <Button
                android:layout_width="248dp"
                android:layout_height="60dp"
                android:background="@drawable/onbording_button_style"
                android:layout_gravity="center_horizontal"
                android:text="Send new password"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
        />




    </LinearLayout>


</RelativeLayout>